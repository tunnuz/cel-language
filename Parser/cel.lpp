evaluate |
Evaluate |
EVALUATE {return EVALUATE;}

imageWidth {return IMAGEWIDTH;}

imageHeight {return IMAGEHEIGHT;}


include {BEGIN INCLUDE_MODE;return CEL_INCLUDE;}

<INCLUDE_MODE>[a-zA-Z\.\/][a-zA-Z0-9_\.\/]* {
    yylval.stringType = strdup(yytext);
    BEGIN INITIAL;
    return FILENAME; 
}


<INCLUDE_MODE>"\"" {return yytext[0];}

"\"" {return yytext[0];}

"+"  {yylval.stringType = strdup(yytext);return yytext[0];}

"-"  {yylval.stringType = strdup(yytext);return yytext[0];}

"/"  {yylval.stringType = strdup(yytext);return yytext[0];}

"*" {yylval.stringType = strdup(yytext);return yytext[0];}

"^" {yylval.stringType = strdup(yytext);return yytext[0];}

"!" {yylval.stringType = strdup(yytext);return yytext[0];}

"," {return yytext[0];}

"=" {return yytext[0];}

"==" |
">=" | 
">"  |
"<=" |
"<"  |
"!=" {yylval.stringType = strdup(yytext);return CMP;}


[a-zA-Z][a-zA-Z0-9_\-]* {yylval.stringType = strdup(yytext);
 return FUNCTION;}

<<EOF>> {if (CEL::CelParser::getSingletonParser()->m_flexInputBuffers.bufferSize() > 1) return CELEOF;
         else
             return 0;
        }

    

. {return yytext[0];}



%%

int yyerror(char *str) {

	char error[1024];
	sprintf(error, "%s:%d: error near token '%s' : %s \n", CEL::CelParser::getSingletonParser()->m_flexInputBuffers.getFileName().c_str(),yylineno,yytext,str);
	
	throw CEL::CelParserException(error);
}



