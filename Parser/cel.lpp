%}




DIGIT [0-9]
UREAL {DIGIT}+(\.{DIGIT}*([eE][+-]?{DIGIT}+)?)?
REAL  {DIGIT}+(\.{DIGIT}*([eE][+-]?{DIGIT}+)?)?

    

%s SET_MODE
%s LEFT_ARG_MODE
%x INCLUDE_MODE

%x COMMENT

%option noyywrap
%%

[\t\n ]

"//".*

"/*" BEGIN COMMENT;

<COMMENT>"*/"  BEGIN INITIAL;
<COMMENT>. |
<COMMENT>\n {;}

{REAL} {errno = 0;
        yylval.doubleType = strtod(yytext, (char **)NULL);
        if (errno == 0)
            return DOUBLE;
        else
            yyerror(" Error in converting string --> double");
        }


sqrt {return SQRT;}
sqr {return SQR;}
sin {return SIN;}
cos {return COS;}
tan {return TAN;}
asin {return ASIN;}
acos {return ACOS;}
atan {return ATAN;}
atan2 {return ATAN2;}
exp {return EXP;}
if {return IF;}
else {return ELSE;}
rect {return RECT;}
viewvolume {return VIEWVOLUME;}

count |
Count |
